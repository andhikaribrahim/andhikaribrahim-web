@import url('https://fonts.googleapis.com/css?family=Oxygen:300,400,700')
@import url('https://unpkg.com/ionicons@4.0.0/dist/css/ionicons.min.css')

@import './extends'

html
	font-size 1rem
	height 100%
	width 100%
	margin-bottom 1rem

body
	background-color #ECEFF1
	font-family 'Oxygen', sans-serif
	
.sub-title
	margin-bottom 1rem
	
.navigation
	.nav
		.nav-item
			a
				color #000
				
.home
	padding-top 50px

img.profile
	height 190px
	width auto

.jargon-container
	margin 18px 0 62px 0
	.jargon-title
		padding-top 22px
	.jargon-desc
		font-weight 300
		font-size 1.2rem
		padding 0 24%


.backend-container,
.frontend-container
	padding 0 24%
	padding-bottom 2%
	.bar-container
		margin-bottom 0.8rem
		.bar-title
			font-weight 300
		.progress
			height 0.4rem
			background-color #bdbdbd
			.progress-bar
				background linear-gradient(90deg, #4b6cb7 0%, #182848 100%)
			.progress-bar.front-end
				background linear-gradient(90deg, rgba(2,0,36,1) 0%, rgba(73,36,133,1) 35%)

.footer
	padding 3.9% 24%
	&--icon
		.icon
			color #bdbdbd
			font-size 4.8rem
			padding 0 1.4rem
			transition color 385ms
			&:hover
				color #424242
	.list-inline
		text-align center